{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Page Layout Definition",
    "type": "object",
    "properties": {
        "pageName": {
            "description": "Page name displayed in page editor",
            "type": "string"
        },
        "pageTemplateDescription": {
            "description": "Page description displayed in page editor",
            "type": "string"
        },
        "sections": {
            "description": "An array of page section definitions",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Section name label",
                        "type": "string"
                    },
                    "key": {
                        "description": "Single camelCase word with only a-z and A-Z characters",
                        "type": "string",
                        "pattern": "^[a-zA-Z]{1,60}$"
                    },
                    "description": {
                        "description": "Section description displayed in page editor",
                        "type": "string"
                    },
                    "elementType": {
                        "description": "Default element type: key word",
                        "type": "string",
                        "enum": ["","text","image","video","hero","collection","gallery"]
                    },
                    "elementTypeOptions": {
                        "description": "List of allowable element types",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": ["text","image","video","hero","collection","gallery"]
                        }
                    }
                },
                "required": ["name", "key"]
            }
        }
    },
    "required": ["pageName"]
}