{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Page Layout Definition",
    "type": "object",
    "properties": {
        "templateTitle": {
            "description": "Template name displayed in page editor",
            "type": "string"
        },
        "templateDescription": {
            "description": "Template description displayed in page editor",
            "type": "string"
        },
        "templateFile": {
            "description": "The template page HTML file.",
            "type": "string"
        },
        "templateType": {
            "description": "Template type. Defaults to 'page'.",
            "type": "string",
            "enum": ["page","collection"]
        },
        "collectionElementTemplateFile": {
            "description": "The element template HTML file.",
            "type": "string"
        },
        "blocks": {
            "description": "An array of page block definitions",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Block name label",
                        "type": "string"
                    },
                    "key": {
                        "description": "Single camelCase word with only a-z and A-Z characters",
                        "type": "string",
                        "pattern": "^[a-zA-Z]{1,60}$"
                    },
                    "description": {
                        "description": "Block description displayed in page editor",
                        "type": "string"
                    },
                    "elementType": {
                        "description": "Default element type: key word",
                        "type": "string",
                        "enum": ["","text","image","video","hero","collection","gallery"]
                    },
                    "elementTypeOptions": {
                        "description": "List of allowable element types",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": ["text","image","video","hero","collection","gallery"]
                        }
                    }
                },
                "required": ["name", "key"]
            }
        },
        "settings": {
            "$ref": "jsonSchemas/settingsDefinitionSchema.json#/defintion"
        }
    },
    "required": ["templateTitle","templateFile","templateType"]
}
