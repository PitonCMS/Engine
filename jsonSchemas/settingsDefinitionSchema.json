{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Settings Definition for key-value pairs",
    "definition": {
        "description": "An array of form inputs for settings.",
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "category": {
                    "description": "Setting category group key: site, contact, social",
                    "type": "string",
                    "enum": ["site","contact","social","piton","page"]
                },
                "label": {
                    "description": "Input label text",
                    "type": "string"
                },
                "key": {
                    "description": "Single camelCase word with only a-z and A-Z characters",
                    "type": "string",
                    "pattern": "^[a-zA-Z]{1,60}$"
                },
                "value": {
                    "description": "Default value, optional",
                    "type": "string"
                },
                "inputType": {
                    "description": "HTML input type: input, select, or textarea.",
                    "type": "string",
                    "enum": ["input","select","textarea"]
                },
                "help": {
                    "description": "Form input help text, optional"
                },
                "options": {
                    "description": "Only for select lists. List of values (saved) and names (readable).",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "description": "Value to save",
                                "type": "string"
                            },
                            "name": {
                                "description": "Value to show in select list.",
                                "type": "string"
                            }
                        },
                        "required": ["value","name"]
                    }
                }
            },
            "required": ["label","key","category"]
        }
    }
}
