{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Setting Inputs Definition",
    "defintion": {
        "description": "Define inputs for custom settings.",
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "label": {
                    "description": "Input label text",
                    "type": "string",
                    "maxLength": 60
                },
                "key": {
                    "description": "Single camelCase word with only a-z and A-Z characters",
                    "type": "string",
                    "pattern": "^[a-zA-Z]{1,60}$"
                },
                "value": {
                    "description": "Default value, optional",
                    "type": "string"
                },
                "inputType": {
                    "description": "HTML input type: input, select, textarea.",
                    "type": "string",
                    "enum": ["input","select","textarea"]
                },
                "help": {
                    "description": "Form input help text",
                    "maxLength": 500
                },
                "options": {
                    "description": "Only for select lists. List of values (saved) and names (readable).",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "description": "Value to save.",
                                "type": "string"
                            },
                            "name": {
                                "description": "Value to show in select list.",
                                "type": "string"
                            }
                        },
                        "required": ["value"]
                    }
                }
            },
            "required": ["label","key"]
        }
    }
}
