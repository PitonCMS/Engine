{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/product.schema.json",
    "title": "Theme Custom Settings Definition",
    "description": "Define inputs for custom settings.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sort": {
                "description": "Sort order index",
                "type": "integer"
            },
            "label": {
                "description": "Input label text",
                "type": "string"
            },
            "key": {
                "description": "camelCase single word as the key name",
                "type": "string"
            },
            "value": {
                "description": "Default value, optional",
                "type": "string"
            },
            "inputType": {
                "description": "HTML input type: input, select, textarea.",
                "type": "string",
                "enum": ["input","select","textarea"]
            },
            "help": {
                "description": "Form input help text"
            },
            "options": {
                "description": "Only for select lists. List of values (saved) and names (readable).",
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "description": "Value to save.",
                            "type": "string"
                        },
                        "name": {
                            "description": "Value to show in select.",
                            "type": "string"
                        }
                    },
                    "required": ["value"]
                }
            }
        }
    }
}