{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$comment": "Available themes schema",
    "type": "object",
    "properties": {
        "themes": {
            "description": "Theme options array",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Display name for theme",
                        "type": "string"
                    },
                    "value": {
                        "description": "Theme file/folder name",
                        "type": "string"
                    }
                },
                "required": ["value", "name"]
            }
        }
    }
}
